<?xml version="1.0" encoding="utf-8"?>
<com.mb.scrapbook.lib.view.gridview.HorizontalDistanceGridView
    android:id="@+id/layoutHorizontalDistanceGridView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <include layout="@layout/mb_grid_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <com.mb.scrapbook.lib.view.indicator.DistanceIndicator
        android:id="@+id/line_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rvGridView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</com.mb.scrapbook.lib.view.gridview.HorizontalDistanceGridView>